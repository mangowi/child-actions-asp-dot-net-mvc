@model IEnumerable<ChildAction.Models.Category>
    <div class="col-sm-4 col-md-3 sidebar">
        
        <div class="mini-submenu">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </div>
        <div class="list-group">


            <span href="#" class="list-group-item active">
                Categories

                <span id="slide-submenu" class="pull-right">
                    <i class="fa fa-times"></i>    
                </span>

            </span>


            @foreach (var category in Model)
            {

                <a  href="/Category/@category.CategoryId" class="list-group-item">

                    <i class="fa fa-angle-double-right">@category.Name</i> <span class="badge">@category.Items</span>

                </a>

            }

        </div>
        
        
        
         
    </div>
